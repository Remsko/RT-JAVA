package main;

import java.awt.image.BufferedImage;
import java.io.File;

import javax.imageio.ImageIO;

public class Image
{
	public BufferedImage buffer;
	public File image;
	
	public Image(String filename)
	{
		image = new File(filename);
		buffer = new BufferedImage(Driver.world.width, Driver.world.height, BufferedImage.TYPE_INT_RGB);
	}
}