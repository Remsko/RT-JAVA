package main;

import utility.*;
import geometry.*;
import scene.*;
import main.*;

public class Tracer
{
	public void trace(int x, int y)
	{
		Color color = new Color(0.0, 0.0, 0.0);
		
		for (int row = 0; row < 8; row++)
		{
			for (int col = 0; col < 8; col++)
			{
				Ray ray = new Ray(new Point3D(x - Main.world.viewplane.width / 2 + 0.5,
						Main.world.viewplane.height / 2 - y + 0.5, 70),
						new Vector3D(0.0, 0.0, -1.0));
				if (sphere.hit(ray) != 0.0)
					color.add(sphere.color);;
				else
				{
					image.buffer.setRGB(x, y, 0);
				}
			}
		}
		color.divide(64);
		image.buffer.setRGB(x, y, 0);
	}
}
