package geometry;

import utility.Ray;

public class Intersection
{
	public double			closestT;
	public double			tmpObjHit;
	public GeometricObject	obj;
	
	double closestHit(GeometricObject[] objArr, Ray ray)
	{
		closestT = 0xffffff;
		tmpObjHit = 0.0;
		for (int i = 0; i < objArr.length; i++)
		{
			tmpObjHit = objArr[i].hit(ray);
			if (tmpObjHit < closestT && tmpObjHit > 10E-9)
			{
				obj = objArr[i];
				closestT = tmpObjHit;
			}
		}
		return (closestT);
	}
}
