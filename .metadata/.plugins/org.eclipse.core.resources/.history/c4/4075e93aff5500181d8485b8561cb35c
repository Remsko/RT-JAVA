package main;

import java.awt.image.BufferedImage;
import java.io.File;

import javax.imageio.ImageIO;

import geometry.Sphere;
import utility.Color;
import utility.Point3D;
import utility.Ray;
import utility.Vector3D;

public class Main
{
	public static void main(String [] args)
	{
		long start = System.nanoTime();

		int	height = 900;
		int width = 1500;
		
		File image = new File("Image.png");
		BufferedImage buffer = new BufferedImage(width, height, BufferedImage.TYPE_INT_RGB);
		
		Sphere sphere = new Sphere(new Point3D(0.0, 0.0, 0.0), new Color(1.0, 1.0, 1.0), 60.0);
		
		for (int y = 0; y < height; y++)
		{
			for (int x = 0; x < width; x++)
			{
				Ray ray = new Ray(new Point3D(x - width / 2 + 0.5, height / 0.5 - y, -100),
						new Vector3D(0.0, 0.0, -1.0));
				buffer.setRGB(x, y, 1000);
			}
		}
		
		try { ImageIO.write(buffer, "PNG", image); }
		catch (Exception e)
		{
			System.out.println("Couldn't write image.");
			System.exit(1);
		}
		
		long end = System.nanoTime();
		
		System.out.println("Loop Time: " + (end - start) / 10.0E8f);
	}
}