package utility;

public class Color
{
	public double r, g, b;
	
	public Color()
	{
		r = 0.0;
		g = 0.0;
		b = 0.0;
	}
	
	public Color(double r, double g, double b)
	{
		this.r = r;
		this.g = g;
		this.b = b;
	}
	
	public void	add(Color color)
	{
		r += color.r;
		g += color.g;
		b += color.b;
	}
	
	public void	divie(Color color)
	{
		r += color.r;
		g += color.g;
		b += color.b;
	}
}
