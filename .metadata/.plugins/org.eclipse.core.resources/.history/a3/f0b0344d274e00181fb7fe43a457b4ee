package main;

import geometry.*;
import java.awt.image.BufferedImage;
import java.io.File;
import javax.imageio.ImageIO;
import utility.*;

public class Driver
{
	private static final int width = 1600;
	private static final int height = 900;
	private static GeometricObject[] objArr;
	
	public static void main(String[] args)
	{
		long	start = System.nanoTime();	
		File image = new File("Image.png");
		
		BufferedImage buffer = new BufferedImage(width, height,
				BufferedImage.TYPE_INT_RGB);
		
		//GeometricObject[] objArr = new GeometricObject[4];
		
		objArr[] = new Sphere(new Origin(0.0, 0.0, 0.0),
				60.0, new Color(1.0f, 0.0f, 1.0f));
		
		objArr[] = new Plane(new Origin(0.0, -60.0, 0.0),
				new Normal(1.0, 1.0, 0.0), new Color(1.0f, 1.0f, 0.0f));
				
		objArr[] = new Cone(new Origin(400.0, 0.0, 0.0),
						10.0, new Color(0.0f, 1.0f, 1.0f));
		
		objArr[] = new Cylinder(new Origin(200.0, 0.0, 0.0),
				30.0, new Color(1.0f, 0.0f, 0.0f));
		for (int y = 0; y < height; y++)
		{
			for (int x = 0; x < width; x++)
			{
				Ray ray = new Ray(new Origin(x - width / 2.0 + 0.5, height / 2.0 + 0.5 - y, 100),
									new Direction(0.0, 0.0, -1.0));
				if (objArr[0].hit(ray) != 0.0)
					buffer.setRGB(x, y, objArr[0].color.toInteger());
				else if (objArr[1].hit(ray) != 0.0)
					buffer.setRGB(x, y, objArr[1].color.toInteger());
				else if (objArr[2].hit(ray) != 0.0)
					buffer.setRGB(x, y, objArr[2].color.toInteger());
				else if (objArr[3].hit(ray) != 0.0)
					buffer.setRGB(x, y, objArr[3].color.toInteger());
				else
					buffer.setRGB(x, y, 0);
			}
		}
		try
		{
			ImageIO.write(buffer, "PNG", image);
		}
		catch (Exception e)
		{
			System.out.println("Couldn't write image.");
			System.exit(1);
		}	
		long end = System.nanoTime();
		System.out.println("Loop time: " + (end - start) / 10.0E8f);
	}
}
