package lightning;

import main.Main;
import utility.Color;
import utility.Point3D;
import utility.Ray;

public class PointLight extends LightObject
{
	public PointLight(Point3D position, Color color)
	{
		this.position = position;
		this.color = color;
	}

	public Ray getLightRay()
	{
		Ray lightRay = new Ray(new Point3D(Main.intersection.position), new Vector3D());
		
		lightRay.direction.normalize();
		return (lightRay);
	}
}